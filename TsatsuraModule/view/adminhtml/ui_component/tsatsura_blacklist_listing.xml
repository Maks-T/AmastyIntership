<?xml version="1.0" encoding="UTF-8"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                tsatsura_blacklist_listing.tsatsura_blacklist_listing_data_source
            </item>
        </item>
    </argument>
    <settings>
        <buttons>
            <!-- I will add the controller Add.php later -->
            <button name="add">
                <url path="*/*/add"/>
                <class>primary</class>
                <label translate="true">Add</label>
            </button>
        </buttons>
        <spinner>blacklist_column</spinner>
        <deps>
            <dep>tsatsura_blacklist_listing.tsatsura_blacklist_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="tsatsura_blacklist_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="cacheRequests" xsi:type="boolean">false</param>
            </storageConfig>

            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider"
                      name="tsatsura_blacklist_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <filters name="listing_filters"/>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="blacklist_column">
        <selectionsColumn name="ids" sortOrder="0">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="entity_id" sortOrder="10">
            <settings>
                <label translate="true">Id</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="product_sku" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Product SKU</label>
            </settings>
        </column>
        <column name="product_qty" sortOrder="30">
            <settings>
                <label translate="true">Product Qty</label>
            </settings>
        </column>
        <actionsColumn name="actions" class="Amasty\TsatsuraModule\Ui\Component\Listing\Column\BlacklistAction">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <!-- I will add the controller Edit.php later -->
                    <item name="viewUrlPath" xsi:type="string">tsatsura/blacklist/edit</item>
                    <item name="urlEntityParamName" xsi:type="string">entity_id</item>
                    <item name="indexField" xsi:type="string">entity_id</item>
                </item>
            </argument>
        </actionsColumn>
    </columns>
</listing>